/* solver.wxss */

/* 页面容器 */
.container {
  padding-bottom: 30rpx;
  background-color: #f0f0f0;
  min-height: 100vh;
}

/* 广告横幅 */
.ad-banner {
  height: 120rpx;
  background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.ad-placeholder {
  color: #999;
  font-size: 24rpx;
}

/* 分享按钮 */
.share-wrapper {
  display: flex;
  justify-content: flex-end;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.share-btn {
  display: flex;
  align-items: center;
  background-color: transparent;
  border: none;
  font-size: 24rpx;
  color: #666;
  padding: 0;
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 魔方展示区域 - 更大更突出 */
.cube-display {
  position: relative;
  height: 600rpx;
  background-color: #f0f0f0;
  margin-bottom: 40rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.solver-canvas {
  width: 90%;
  height: 90%;
  max-width: 500rpx;
  max-height: 500rpx;
}

.solving-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(240, 240, 240, 0.9);
  font-size: 28rpx;
  color: #666;
}

.solving-loading text {
  margin-top: 20rpx;
}

/* 步数显示 */
.step-display {
  text-align: center;
  margin-bottom: 40rpx;
}

.step-text {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

/* 主要控制按钮 */
.main-controls {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 50rpx;
  padding: 0 50rpx;
}

.control-btn {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  font-weight: 500;
  border: none;
}

.control-btn::after {
  border: none;
}

.back-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  min-width: 120rpx;
}

.nav-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  min-width: 100rpx;
}

.btn-disabled {
  background: #cccccc !important;
  color: #666666 !important;
}

/* 速度控制和自动播放 */
.speed-auto-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 50rpx;
  margin-bottom: 40rpx;
}

.speed-control {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 40rpx;
}

.speed-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 80rpx;
}

.speed-slider {
  flex: 1;
  max-width: 200rpx;
}

.auto-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  font-weight: 500;
  border: none;
  min-width: 120rpx;
}

.auto-btn::after {
  border: none;
}

.auto-btn.auto-playing {
  background: linear-gradient(135deg, #FF9800, #F57C00);
}


/* 完成提示卡片 */
.completion-card {
  text-align: center;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.completion-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.completion-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.completion-stats {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 26rpx;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

.completion-card .btn {
  background-color: white;
  color: #4CAF50;
  font-weight: bold;
}

/* 分享对话框 */
.share-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin: 30rpx 0;
}

.share-options .btn {
  width: 100%;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .action-buttons {
    gap: 10rpx;
  }
  
  .control-btn {
    font-size: 24rpx;
    height: 65rpx;
    line-height: 65rpx;
  }
  
  .cube-display {
    height: 350rpx;
  }
}

@media screen and (min-width: 414px) {
  .cube-display {
    height: 450rpx;
  }
  
  .control-btn {
    height: 80rpx;
    line-height: 80rpx;
  }
}