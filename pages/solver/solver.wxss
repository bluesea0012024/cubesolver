/* solver.wxss */

/* 页面容器 */
.container {
  padding-bottom: 30rpx;
}

/* 广告横幅 */
.ad-banner {
  height: 120rpx;
  background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.ad-placeholder {
  color: #999;
  font-size: 24rpx;
}

/* 魔方展示区域 */
.cube-display {
  position: relative;
  height: 400rpx;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.solver-canvas {
  width: 100%;
  height: 100%;
}

.solving-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  color: #666;
}

.solving-loading text {
  margin-top: 20rpx;
}

/* 步骤信息 */
.step-info {
  margin-bottom: 20rpx;
}

.step-progress {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-right: 20rpx;
  min-width: 150rpx;
}

.progress-bar {
  flex: 1;
  height: 6rpx;
  background-color: #e0e0e0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #1976D2;
  transition: width 0.3s ease;
}

.step-formula {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.formula-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.formula-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
  font-family: 'Courier New', monospace;
}

.step-description {
  font-size: 24rpx;
  color: #888;
  line-height: 1.4;
}

/* 控制区域 */
.controls {
  margin-bottom: 20rpx;
}

.speed-control {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.speed-label {
  font-size: 26rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.speed-slider {
  flex: 1;
  margin: 0 20rpx;
}

.speed-value {
  font-size: 26rpx;
  color: #666;
  min-width: 60rpx;
  text-align: center;
}

.action-buttons {
  display: flex;
  gap: 15rpx;
}

.control-btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0;
  font-size: 26rpx;
  border-radius: 8rpx;
}

/* 解法步骤列表 */
.solution-steps {
  margin-bottom: 20rpx;
}

.steps-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.steps-list {
  max-height: 300rpx;
}

.step-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.step-item:last-child {
  border-bottom: none;
}

.step-item.active {
  background-color: #e3f2fd;
  transform: translateX(10rpx);
}

.step-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-item.active .step-number {
  background-color: #1976D2;
  color: white;
}

.step-move {
  font-size: 28rpx;
  font-weight: bold;
  color: #1976D2;
  font-family: 'Courier New', monospace;
  margin-right: 15rpx;
  min-width: 80rpx;
}

.step-desc {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  line-height: 1.3;
}

/* 完成提示卡片 */
.completion-card {
  text-align: center;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.completion-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.completion-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.completion-stats {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 26rpx;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

.completion-card .btn {
  background-color: white;
  color: #4CAF50;
  font-weight: bold;
}

/* 分享对话框 */
.share-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin: 30rpx 0;
}

.share-options .btn {
  width: 100%;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .action-buttons {
    gap: 10rpx;
  }
  
  .control-btn {
    font-size: 24rpx;
    height: 65rpx;
    line-height: 65rpx;
  }
  
  .cube-display {
    height: 350rpx;
  }
}

@media screen and (min-width: 414px) {
  .cube-display {
    height: 450rpx;
  }
  
  .control-btn {
    height: 80rpx;
    line-height: 80rpx;
  }
}