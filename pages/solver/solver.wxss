/* solver.wxss */

/* 页面容器 */
.container {
  padding-bottom: 30rpx;
  background-color: #f0f0f0;
  min-height: 100vh;
}

/* 顶部广告横幅 */
.ad-banner {
  background: linear-gradient(135deg, #4A90E2, #357BD8);
  color: white;
  padding: 35rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 0;
  margin-bottom: 30rpx;
}

.ad-content {
  flex: 1;
}

.ad-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.ad-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 15rpx;
}

/* 分享按钮容器样式 */
.share-container {
  display: flex;
  justify-content: flex-end;
  padding: 0 30rpx 30rpx;
}

.share-btn {
  background-color: transparent;
  padding: 0;
  margin: 0;
  border: none;
  line-height: normal;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 8rpx;
}

.share-text {
  font-size: 24rpx;
  color: #666;
}

/* 魔方展示区域 - 更大更突出 */
.cube-display {
  position: relative;
  height: 600rpx;
  background-color: #f0f0f0;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 移除overflow: hidden，让魔方完整显示 */
}

/* 魔方组件样式 - 让组件使用默认尺寸 */
hybrid-cube {
  display: block;
  transition: all 0.3s ease-in-out;
  /* 移除固定宽高，让组件使用默认的600rpx容器 */
}


.solving-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(240, 240, 240, 0.9);
  font-size: 28rpx;
  color: #666;
  z-index: 10; /* 确保加载动画在魔方上方 */
}

.solving-loading text {
  margin-top: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 步数显示区域 */
.step-info {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
}

.step-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  background: linear-gradient(135deg, #4A90E2, #357BD8);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 底部控制区 */
.bottom-controls {
  padding: 0 30rpx 40rpx;
}

/* 主要控制按钮 */
.main-controls {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.control-btn {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  font-weight: 500;
  border: none;
  min-width: 100rpx;
}

.control-btn::after {
  border: none;
}

.back-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.nav-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.auto-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.auto-btn.auto-playing {
  background: linear-gradient(135deg, #FF9800, #F57C00);
}

.btn-disabled {
  background: #cccccc !important;
  color: #666666 !important;
}

/* 播放速度调节 */
.speed-control-section {
  text-align: center;
  background-color: white;
  border-radius: 12rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.speed-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 20rpx;
}

.speed-options {
  display: flex;
  justify-content: space-between;
  gap: 10rpx;
}

.speed-option {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 15rpx 10rpx;
  border-radius: 8rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.speed-option.active {
  background: linear-gradient(135deg, #4A90E2, #357BD8);
  color: white;
  font-weight: 500;
}


/* 完成提示卡片 */
.completion-card {
  text-align: center;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.completion-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.completion-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.completion-stats {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 26rpx;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

.completion-card .btn {
  background-color: white;
  color: #4CAF50;
  font-weight: bold;
}

/* 分享对话框 */
.share-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin: 30rpx 0;
}

.share-options .btn {
  width: 100%;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .action-buttons {
    gap: 10rpx;
  }
  
  .control-btn {
    font-size: 24rpx;
    height: 65rpx;
    line-height: 65rpx;
  }
  
  .cube-display {
    height: 350rpx;
  }
}

@media screen and (min-width: 414px) {
  .cube-display {
    height: 450rpx;
  }
  
  .control-btn {
    height: 80rpx;
    line-height: 80rpx;
  }
}