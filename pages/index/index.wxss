/* 魔方3D展示区域 - 重构样式以确保居中 */
.cube-display-container {
  flex: 1; /* 占据剩余的垂直空间，将颜色选择器推到底部 */
  min-height: 600rpx; /* 设置最小高度以防止容器坍塌 */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 10rpx;
}

/* 魔方组件的直接父容器 */
.cube-display {
  width: 600rpx;
  height: 600rpx;
  position: relative;
  
  /* 使用Flexbox将内部的魔方组件（400rpx）居中 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.cube-canvas {
  width: 100%;
  height: 100%;
  display: block;
  background-color: #fafafa;
}

.cube-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
  color: #666;
}

.cube-loading text {
  margin-top: 20rpx;
}

/* 调试信息 */
.debug-info {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  text-align: center;
  max-width: 80%;
}

/* 颜色选择器 */
.color-selector {
  display: flex;
  justify-content: center; /* 居中对齐 */
  gap: 50rpx; /* 调整颜色间距 */
  align-items: center;
  width: 100%;
  padding: 20rpx;
  background-color: #ffffff;
}

.color-circle {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 移除 transform 属性 */
}

.color-dot {
  width: 50rpx; /* 调小基础大小 */
  height: 50rpx; /* 调小基础大小 */
  border-radius: 50%;
  border: 3rpx solid black; /* 为未选中圆圈增加黑色边框 */
  margin-bottom: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  transition: transform 0.2s ease-in-out;
  transform: scale(0.9); /* 未选中时缩小 */
}

.color-circle.selected .color-dot {
  border-color:rgb(0, 0, 0); /* A highlight color for selection */
  transform: scale(1.38); /* 调整放大系数以保持选中大小不变 */
}

.color-label {
  font-size: 24rpx; /* 调小字体 */
  color: #333;
  font-weight: normal; /* 去掉粗体 */
}

/* Sticker and Color Selector Colors */
.cube-color-U { background-color: #ffffff; border: 1rpx solid #333333; } /* White #ccc*/
.cube-color-D { background-color: #ffeb3b; } /* Yellow */
.cube-color-F { background-color: #4caf50; } /* Green */
.cube-color-B { background-color: #2196f3; } /* Blue */
.cube-color-L { background-color: #ff9800; } /* Orange */
.cube-color-R { background-color:rgb(167, 2, 2); } /* Red - 调整为更鲜艳的红色 */
.cube-color-empty { background-color: #f5f5f5; border: 1rpx solid #ddd;}

/* 操作按钮容器 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 40rpx 60rpx;
  gap: 30rpx;
}

/* 通用按钮样式 */
.btn {
  flex: 1;
  height: 88rpx;
  /* line-height: 88rpx; */ /* 移除 line-height */
  display: flex; /* 使用 Flexbox 布局 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  border-radius: 16rpx;
  font-size: 45rpx; /* 增大 40% */
  font-weight: normal;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn::after {
  border: none;
}

/* 重置按钮 */
.btn-reset {
  background: linear-gradient(135deg, #4A90E2, #357BD8); /* 蓝色渐变 */
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.3); /* 蓝色阴影 */
}

.btn-reset:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(74, 144, 226, 0.3); /* 蓝色阴影 */
}

/* 还原按钮 */
.btn-solve {
  background: linear-gradient(135deg, #4A90E2, #357BD8); /* 蓝色渐变 */
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.3); /* 蓝色阴影 */
}

.btn-solve.enabled:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(74, 144, 226, 0.3); /* 蓝色阴影 */
}

.btn-solve.disabled {
  background: #e0e0e0;
  color: #9e9e9e;
  box-shadow: none;
}

/* 模态框按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #4CAF50, #45A049);
  color: white;
}

.btn-secondary {
  background: linear-gradient(135deg, #f5f5f5, #e8e8e8);
  color: #333;
  border: 1rpx solid #ddd;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.primary-btn {
  background: linear-gradient(135deg, #4CAF50, #45A049);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
}

.primary-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.primary-btn.disabled {
  background: #cccccc;
  color: #666666;
  box-shadow: none;
}

.secondary-btn {
  background: linear-gradient(135deg, #f5f5f5, #e8e8e8);
  color: #333;
  border: 1rpx solid #ddd;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.secondary-btn:active {
  transform: translateY(2rpx);
  background: #e0e0e0;
}

.secondary-btn:disabled {
  opacity: 0.5;
}

/* 进度提示 */
.progress-toast {
  position: fixed;
  bottom: 140rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  z-index: 999;
  animation: fadeInOut 2s ease-in-out;
}

@keyframes fadeInOut {
  0% { opacity: 0; transform: translateX(-50%) translateY(20rpx); }
  10% { opacity: 1; transform: translateX(-50%) translateY(0); }
  90% { opacity: 1; transform: translateX(-50%) translateY(0); }
  100% { opacity: 0; transform: translateX(-50%) translateY(-20rpx); }
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 50rpx 40rpx 40rpx;
  margin: 0 40rpx;
  max-width: 500rpx;
  width: 100%;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.modal-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-actions .btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 魔方颜色样式 */
.cube-color-red {
  background-color: #e60000; /* 调整为更鲜艳的红色 */
}

.cube-color-orange {
  background-color: #ff9800;
}

.cube-color-yellow {
  background-color: #ffeb3b;
}

.cube-color-white {
  background-color: #ffffff;
}

.cube-color-green {
  background-color: #4caf50;
}

.cube-color-blue {
  background-color: #2196f3;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .cube-display-container {
    min-height: 650rpx;
    padding: 5rpx;
  }
  
  .color-dot {
    width: 50rpx;
    height: 50rpx;
  }
  
  .action-btn {
    height: 70rpx;
    font-size: 28rpx;
  }
}

@media screen and (min-width: 414px) {
  .cube-display-container {
    min-height: 750rpx;
  }
  
  .color-dot {
    width: 65rpx;
    height: 65rpx;
  }
}