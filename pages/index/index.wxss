/* index.wxss - 根据UI设计重新布局 */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
}

/* 顶部广告横幅 */
.ad-banner {
  background: linear-gradient(135deg, #4A90E2, #357BD8);
  color: white;
  padding: 35rpx 30rpx; /* 增加垂直内边距 */
  display: flex;
  justify-content: flex-start; /* 更新对齐方式 */
  align-items: center;
  border-radius: 0; /* 去掉圆角 */
  margin-bottom: 30rpx;
}

.ad-content {
  flex: 1;
}

.ad-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.ad-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 15rpx;
}

.ad-logo {
  display: flex;
  align-items: center;
}

.logo-text {
  font-size: 28rpx;
  font-weight: bold;
  background: linear-gradient(45deg, #00D4AA, #00B894);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 移除旧的分享按钮样式 */

/* 新增分享按钮容器样式 */
.share-container {
  display: flex;
  justify-content: flex-end; /* 更新为右对齐 */
  padding: 0 30rpx 30rpx;
}

.share-btn {
  /* 重置所有不必要的样式 */
  background-color: transparent;
  padding: 0;
  margin: 0;
  border: none;
  line-height: normal; /* 恢复正常的line-height */
  
  /* 更新为Flex垂直布局，并让其自适应内容 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 必须移除按钮的默认边框伪元素 */
.share-btn::after {
  border: none;
}

.share-icon {
  /* 调整图标大小 */
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 8rpx; /* 图标与文字的间距 */
}

/* 新增分享文字样式 */
.share-text {
  font-size: 24rpx;
  color: #666;
}

